{
  "version": 2,
  "name": "universal-db-mcp",
  "builds": [
    {
      "src": "serverless/vercel/api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/serverless/vercel/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/serverless/vercel/api/index.js"
    }
  ],
  "env": {
    "MODE": "http",
    "HTTP_PORT": "9000",
    "API_KEYS": "@api_keys",
    "CORS_ORIGINS": "*",
    "RATE_LIMIT_MAX": "100",
    "RATE_LIMIT_WINDOW": "1m",
    "LOG_LEVEL": "info",
    "NODE_ENV": "production"
  },
  "regions": ["hkg1"]
}
